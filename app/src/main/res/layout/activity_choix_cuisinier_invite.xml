<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demarrageapplication.ChoixCuisinierInvite"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp">

        <Button
            android:id="@+id/cuisinierButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choixCuisinier"
            android:onClick="onClickCuisinierButton"
            style="@style/classicButtonOrange"
            android:textSize="@dimen/bigSize"/>

        <Button
            android:id="@+id/inviteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choixInvite"
            android:onClick="onClickinviteButton"
            style="@style/classicButtonOrange"
            android:textSize="@dimen/bigSize"/>
        <Button
            android:id="@+id/profilButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon Profil"
            android:onClick="onClickProfilButton"
            style="@style/classicButtonOrange"
            android:textSize="@dimen/bigSize"/>

    </LinearLayout>

</RelativeLayout>