<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuisinier.creerMaTable.creerMaTableStep4"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bandeauHaut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <fragment
                android:id="@+id/creerMaTableStep4MenuFragment"
                android:name="com.example.latabledesgourmands.fragments.bandeauHaut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_bandeau_haut" />
            <TextView
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:text="@string/MaTable"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recapContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/bandeauHaut"
            >
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="Cuisinier :"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"></TextView>

                <TextView
                    android:id="@+id/cookNumerPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="cook number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"
                    ></TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Menu :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"></TextView>
            <fragment
                android:id="@+id/fragment2"
                android:name="com.example.latabledesgourmands.fragments.menuFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_menu" />

            <TextView
                android:id="@+id/adressePrint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Adresse"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                android:layout_weight="1"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/datePrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"
                    android:layout_weight="1"
                    ></TextView>

                <TextView
                    android:id="@+id/hourPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="Heure"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"
                    android:layout_weight="1"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombreConvivePrint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="Nombre de convives"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"></TextView>
                <TextView
                    android:id="@+id/nomThemePrint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="ThÃ¨me"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigSize"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/alcoolPrint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="Alcool"
                    android:backgroundTint="@color/checkbox_color"
                    android:textSize="@dimen/mediumSize"
                    android:layout_weight="1"
                    ></Button>

                <Button
                    android:id="@+id/animauxPrint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="Animaux"
                    android:backgroundTint="@color/checkbox_color"
                    android:textSize="@dimen/mediumSize"
                    android:layout_weight="1"
                    ></Button>

                <Button
                    android:id="@+id/fumeurPrint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/checkbox_color"
                    android:textColor="@color/black"
                    android:fontFamily="@font/indie_flower"
                    android:gravity="center_horizontal"
                    android:text="Fumeur"
                    android:textSize="@dimen/mediumSize"
                    android:layout_weight="1"
                    ></Button>
            </LinearLayout>
        </LinearLayout>



        <Button
            android:id="@+id/nextStepButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumSize"
            android:layout_margin="5dp"
            android:text="@string/creer_ma_table"
            android:onClick="onClickCreateATable"
            android:layout_below="@id/recapContainer"
            ></Button>
        <fragment
            android:id="@+id/fragmentBas"
            android:name="com.example.latabledesgourmands.fragments.bandeauBasCreationTDG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_bandeau_bas_creation_t_d_g"
            android:layout_below="@id/nextStepButton"
            />
    </RelativeLayout>


</ScrollView>
