<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuisinier.créerMonMenu.creerMonMenuStep1"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <fragment
            android:id="@+id/fragment"
            android:name="com.example.latabledesgourmands.fragments.bandeauHaut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_bandeau_haut" />
        <TextView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Création de mon Entree"
            android:textSize="@dimen/bigSize"
            android:gravity="center_horizontal"
            style="@style/classicButtonGreen"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/topLayout"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/entreeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="Nom :"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            style="@style/classicButtonGreen"
            />
            <EditText
                android:id="@+id/entreeNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                android:text=" "
                style="@style/classicButtonLightWhite"
                />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listeEntreeIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Ingrédients :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                style="@style/classicButtonGreen"
                />

            <EditText
                android:id="@+id/ingredientEntreeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                android:text=" "
                style="@style/classicButtonLightWhite"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recetteEntree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Recette :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                style="@style/classicButtonGreen"
                />

            <EditText
                android:id="@+id/recetteEntreeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:text=" "
                android:textSize="@dimen/bigSize"
                style="@style/classicButtonLightWhite"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prixEntree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Prix par portion :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                style="@style/classicButtonGreen"
                />

            <EditText
                android:id="@+id/prixEntreeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:text=" "
                android:textSize="@dimen/bigSize"
                style="@style/classicButtonLightWhite"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/difficulteEntree"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Difficulté :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                style="@style/classicButtonGreen"
                />

            <RatingBar
                android:id="@+id/difficulteEntreeInput"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@color/lightWhite"
                android:fontFamily="@font/indie_flower"
                android:numStars="5"
                android:rating="3"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize"
                style="@style/classicButtonLightWhite"
                />
        </LinearLayout>

        <CheckBox
            android:id="@+id/vegetarienEntreeInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            android:text="Vegetarien"
            style="@style/classicButtonLightWhite"
            />

        <CheckBox
            android:id="@+id/veganEntreeInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            android:text="Vegan"
            style="@style/classicButtonLightWhite"
            />

        <CheckBox
            android:id="@+id/sansGlutenEntreeInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            android:text="Sans gluten"
            style="@style/classicButtonLightWhite"
            />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/bigMediumSize"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:text="@string/nextStep"
        android:onClick="onClickCreateFirstStep"
        android:layout_alignParentBottom="true"
        style="@style/classicButtonGreen"
        ></Button>

</RelativeLayout>