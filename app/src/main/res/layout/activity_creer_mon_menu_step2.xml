<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuisinier.créerMonMenu.creerMonMenuStep2"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <fragment
            android:id="@+id/fragment"
            android:name="com.example.latabledesgourmands.fragments.bandeauHaut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_bandeau_haut" />
        <TextView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:text="Création de mon Plat"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/topLayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/platName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Nom :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize" />
            <EditText
                android:id="@+id/platNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:text=" "
                android:textSize="@dimen/bigSize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listePlatIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Ingrédients :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize" />

            <EditText
                android:id="@+id/ingredientPlatInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:text=" "
                android:textSize="@dimen/bigSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recettePlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Recette :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize" />

            <EditText
                android:id="@+id/recettePlatInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:text=" "
                android:textSize="@dimen/bigSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prixPlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Prix par portion :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize" />

            <EditText
                android:id="@+id/prixPlatInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:textColor="@color/black"
                android:text=" "
                android:textSize="@dimen/bigSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/difficultePlat"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:gravity="center_horizontal"
                android:text="Difficulté :"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize" />

            <RatingBar
                android:id="@+id/difficultePlatInput"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:fontFamily="@font/indie_flower"
                android:numStars="5"
                android:rating="3"
                android:textColor="@color/black"
                android:textSize="@dimen/bigSize" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/vegetarienPlatInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            android:text="Vegetarien" />

        <CheckBox
            android:id="@+id/veganPlatInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            android:text="Vegan" />

        <CheckBox
            android:id="@+id/sansGlutenPlatInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            android:text="Sans gluten" />
        <CheckBox
            android:id="@+id/wineInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            android:text="Vin" />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:fontFamily="@font/indie_flower"
        android:textColor="@color/black"
        android:textSize="@dimen/bigMediumSize"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:text="@string/nextStep"
        android:onClick="onClickCreateSecondStep"
        android:layout_alignParentBottom="true"
        ></Button>

</RelativeLayout>