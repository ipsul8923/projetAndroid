<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".invite.rechercherUneTable.RechercherTableStep3"
    android:orientation="vertical"
    android:background="@drawable/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <fragment
        android:id="@+id/fragment"
        android:name="com.example.latabledesgourmands.fragments.bandeauHaut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_bandeau_haut" />
    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/indie_flower"
        android:text="@string/MaTable"
        android:textColor="@color/black"
        android:textSize="@dimen/bigSize"
        android:gravity="center_horizontal"
        />
    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.latabledesgourmands.fragments.tableFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_table"
        android:layout_margin="@dimen/mediumSize"/>

    <Button
        android:id="@+id/validerTableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/validerTable"
        android:fontFamily="@font/indie_flower"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:onClick="onClickValiderBoutton"/>
</LinearLayout>
</ScrollView>