<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/mediumSize"
    android:background="@color/lightYellow"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomEntreeFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="Mon Entree"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            style="@style/classicButtonLightYellow"
            ></TextView>
        <RatingBar
            android:id="@+id/difficulteEntreeFragment"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightWhite"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:isIndicator="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:numStars="5"
            android:rating="3"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomPlatFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="Mon Plat"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            style="@style/classicButtonLightYellow"
            ></TextView>
        <RatingBar
            android:id="@+id/difficultePlatFragment"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightWhite"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:isIndicator="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:numStars="5"
            android:rating="3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomDessertFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="Mon Dessert"
            android:textColor="@color/black"
            android:textSize="@dimen/bigSize"
            style="@style/classicButtonLightYellow"
            ></TextView>
        <RatingBar
            android:id="@+id/difficulteDessertFragment"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightWhite"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:isIndicator="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:numStars="5"
            android:rating="3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/prixMenuFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="Price"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="@dimen/bigSize"
            style="@style/classicButtonLightYellow"
            >
        </TextView>
        <Button
            android:id="@+id/wineIndicatorFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/checkbox_color"
            android:textColor="@color/black"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="avec Vin"
            android:textSize="@dimen/mediumSize"
            android:layout_weight="1"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/VegetarienMenuIndicatorFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="Vegetarien"
            android:backgroundTint="@color/checkbox_color"
            android:textSize="@dimen/mediumSize"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/VeganMenuIndicatorFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="Vegan"
            android:backgroundTint="@color/checkbox_color"
            android:textSize="@dimen/mediumSize"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/GlutenMenuIndicatorFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/checkbox_color"
            android:textColor="@color/black"
            android:fontFamily="@font/indie_flower"
            android:gravity="center_horizontal"
            android:text="Sans gluten"
            android:textSize="@dimen/mediumSize"
            android:layout_weight="1"
            ></Button>
    </LinearLayout>

</LinearLayout>