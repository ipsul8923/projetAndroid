<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/mediumSize"
    >
    <TextView
        android:id="@+id/nomEntree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/indie_flower"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="@dimen/bigSize"
        android:gravity="center_horizontal"
        android:text="MENU PLACEHOLDER ENTREE">
    </TextView>
    <TextView
        android:id="@+id/nomPlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/indie_flower"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="@dimen/bigSize"
        android:gravity="center_horizontal"
        android:text="MENU PLACEHOLDER PLAT">

    </TextView>
    <TextView
        android:id="@+id/nomDessert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/indie_flower"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="@dimen/bigSize"
        android:gravity="center_horizontal"
        android:text="MENU PLACEHOLDER DESSERT">

    </TextView>
</LinearLayout>